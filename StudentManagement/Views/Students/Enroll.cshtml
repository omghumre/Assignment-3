@model StudentManagement.Models.Student
@{
    ViewData["Title"] = "Enroll Courses";
}

            <div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Enroll Courses for @Model.Name</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Enroll" method="put type="hidden" asp-for="StudentId">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Select Courses</label>
                            <select asp-items="ViewBag.Courses" name="selectedCourses" class="form-select" multiple="multiple"></select>
                        </div>

                        <div class="d-flex justify-content-between">
                            
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
