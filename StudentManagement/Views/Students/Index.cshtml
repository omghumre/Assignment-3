@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Student List</h4>
                    <a asp-action="Create">CreateCreate New</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-outline-primary"> Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-outline-danger">Delete</a>
                                            <a asp-action="Enroll" asp-route-id="@item.StudentId" class="btn btn-outline-success"> Enroll</a>
                                            <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-outline-secondary">Details</a>
                                    </div>                                    
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>